<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        tools:context=".UpdateTodoItemActivity">

        <FrameLayout
            android:id="@+id/updateItemFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true" />

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabGeneral"
        android:layout_gravity="bottom|end"
        app:tint="@color/overlay"
        android:backgroundTint="@color/title"
        android:layout_margin="30dp"
        android:src="@drawable/ic_status"
        android:contentDescription="@string/general_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/title"
        android:id="@+id/fabUpdate"
        app:tint="@color/overlay"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_update"
        android:contentDescription="@string/update_todo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/title"
        android:visibility="invisible"
        android:id="@+id/fabDelete"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_delete"
        app:tint="@color/overlay"
        android:contentDescription="@string/delete_todo" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>